#include <stdio.h>
#include "freertos/FreeRTOS.h" // para los delay 
#include "freertos/task.h"
#include "driver/gpio.h" // libre

#define push0 22

#define led0 21
#define led1 18
#define led2 17
#define led3 4
#define led4 25
#define led5 16
#define led6 27
#define led7 19

#define GPIO_OUTS ((1<<led0)|(1<<led1)|(1<<led2)|(1<<led3)|(1<<led4)|(1<<led5)|(1<<led6)|(1<<led7))


void app_main()
{
    printf("configuracion perrona\n"); 

    gpio_config_t io_conf = {};
    io_conf.mode = GPIO_MODE_OUTPUT;
    io_conf.pin_bit_mask = GPIO_OUTS;
    io_conf.intr_type = GPIO_INTR_DISABLE;
    io.conf.pull_down_en = 0;
    io.conf.pull_up_en = 0;
    gpio_config(&io_conf);
}
